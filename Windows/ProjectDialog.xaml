<Window x:Class="AGR_Project_Manager.Windows.ProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Проект" 
        SizeToContent="Height"
        Width="450"
        WindowStartupLocation="CenterOwner"
        Background="#1e1d22"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <Grid Margin="20,20,20,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Название проекта" 
                       Foreground="#aaa" 
                       FontSize="12" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="NameTextBox" 
                     Background="#2d2c35" 
                     Foreground="White" 
                     BorderBrush="#3a3a3a"
                     Padding="10,10"
                     FontSize="14"
                     CaretBrush="White"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Описание -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Описание (необязательно)" 
                       Foreground="#aaa" 
                       FontSize="12" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="DescriptionTextBox" 
                     Background="#2d2c35" 
                     Foreground="White" 
                     BorderBrush="#3a3a3a"
                     Padding="10,10"
                     FontSize="14"
                     Height="100"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     CaretBrush="White"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Background="#3a3a3a" 
                    Foreground="White"
                    Padding="25,10"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsCancel="True"
                    Click="CancelBtn_Click"/>
            <Button Content="Сохранить" 
                    Background="#4a7c59" 
                    Foreground="White"
                    Padding="25,10"
                    Cursor="Hand"
                    Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>