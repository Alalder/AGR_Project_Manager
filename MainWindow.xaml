<Window x:Class="AGR_Project_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:converters="clr-namespace:AGR_Project_Manager.Converters"
        mc:Ignorable="d"
        Title="AGR Project Manager"
        MinHeight="600" MinWidth="1200"
        Height="750" Width="1400"
        Background="{DynamicResource BackgroundPrimary}"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Конвертеры -->
        <converters:PathToImageConverter x:Key="PathToImageConverter"/>
        <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>

        
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== ЛЕВАЯ ПАНЕЛЬ ===== -->
        <Border Grid.Column="0" Background="{DynamicResource BackgroundSecondary}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Button x:Name="NewProjectBtn" 
                        Content="➕ Новый проект" 
                        Background="{DynamicResource AccentPrimary}" 
                        Foreground="{DynamicResource ForegroundPrimary}" 
                        Margin="10" 
                        Padding="10,8"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Click="NewProjectBtn_Click"/>

                <ListBox x:Name="ProjectsList" 
                         Grid.Row="1" 
                         Background="{DynamicResource BackgroundTertiary}" 
                         BorderBrush="{DynamicResource BorderPrimary}" 
                         BorderThickness="1" 
                         Margin="10,0,10,10"
                         SelectionChanged="ProjectsList_SelectionChanged"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Background" Value="{DynamicResource ListItemBackground}"/>
                            <Setter Property="Foreground" Value="{DynamicResource ForegroundPrimary}"/>
                            <Setter Property="Padding" Value="8"/>
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ListItemBackgroundSelected}"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{DynamicResource ListItemBackgroundHover}"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding Name}" 
                                           Foreground="{DynamicResource ForegroundPrimary}" 
                                           VerticalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <Button Content="✏️" Tag="{Binding}" 
                                            Background="{DynamicResource ButtonBackground}" 
                                            Foreground="{DynamicResource ForegroundPrimary}" 
                                            Margin="2" Padding="6,4" FontSize="10"
                                            ToolTip="Редактировать" Click="EditProject_Click"/>
                                    <Button Content="📋" Tag="{Binding}" 
                                            Background="{DynamicResource ButtonBackground}" 
                                            Foreground="{DynamicResource ForegroundPrimary}" 
                                            Margin="2" Padding="6,4" FontSize="10"
                                            ToolTip="Дублировать" Click="CloneProject_Click"/>
                                    <Button Content="❌" Tag="{Binding}" 
                                            Background="{DynamicResource DangerBackground}" 
                                            Foreground="{DynamicResource ForegroundPrimary}" 
                                            Margin="2" Padding="6,4" FontSize="10"
                                            ToolTip="Удалить" Click="DeleteProject_Click"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Блок "Утилиты" -->
                <Border Grid.Row="2" Background="{DynamicResource BackgroundTertiary}" 
        BorderBrush="{DynamicResource BorderPrimary}" 
        BorderThickness="1" Margin="10,0,10,10" Padding="8">
                    <StackPanel>
                        <TextBlock Text="🔧 Утилиты" 
                   Foreground="{DynamicResource ForegroundSecondary}" 
                   FontSize="12" 
                   FontWeight="SemiBold" Margin="0,0,0,8"/>

                        <!-- Выбор темы -->
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <TextBlock Text="🎨 Тема:" 
               Foreground="{DynamicResource ForegroundSecondary}"
               VerticalAlignment="Center"
               Margin="0,0,8,0"/>
                            <ComboBox x:Name="ThemeComboBox"
              Width="144"
              SelectionChanged="ThemeComboBox_SelectionChanged">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding DisplayName}" 
                           Foreground="{DynamicResource ForegroundPrimary}"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <Separator Background="{DynamicResource BorderPrimary}" Margin="0,4"/>

                        <Button Content="🎨 RAL Colors" 
                                Background="{DynamicResource ButtonBackground}" 
                                Foreground="{DynamicResource ForegroundPrimary}" 
                                Margin="0,0,0,6" Padding="8,6" Cursor="Hand" 
                                Click="RalColorsBtn_Click"/>
                        <Button Content="🔤 Name Generator" 
                                Background="{DynamicResource ButtonBackground}" 
                                Foreground="{DynamicResource ForegroundPrimary}" 
                                Margin="0,0,0,6" Padding="8,6" Cursor="Hand" 
                                Click="NameGeneratorBtn_Click"/>
                        <Button Content="📁 Создать папку проекта" 
                                Background="{DynamicResource ButtonBackground}" 
                                Foreground="{DynamicResource ForegroundPrimary}" 
                                Margin="0,0,0,6" Padding="8,6" Cursor="Hand" 
                                Click="CreateFolderBtn_Click"/>
                        <Button Content="🌍 GeoJSON Generator" 
                                Background="{DynamicResource ButtonBackground}" 
                                Foreground="{DynamicResource ForegroundPrimary}" 
                                Margin="0,0,0,6" Padding="8,6" Cursor="Hand" 
                                Click="GeoJsonBtn_Click"/>

                        <Separator Background="{DynamicResource BorderPrimary}" Margin="0,4"/>

                        <Button Content="📖 Справка" 
                                Background="{DynamicResource ButtonBackground}" 
                                Foreground="{DynamicResource ForegroundPrimary}" 
                                Margin="0,6,0,6" Padding="8,6" Cursor="Hand" 
                                Click="HelpBtn_Click"/>
                        <Button Content="📋 Актуальные требования" 
                                Background="{DynamicResource ButtonBackground}" 
                                Foreground="{DynamicResource ForegroundPrimary}" 
                                Margin="0,0,0,0" Padding="8,6" Cursor="Hand" 
                                Click="RequirementsBtn_Click"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- ===== ПРАВАЯ ПАНЕЛЬ ===== -->
        <Border Grid.Column="1" Background="{DynamicResource BackgroundPrimary}">
            <Grid>
                <!-- Заглушка -->
                <TextBlock x:Name="PlaceholderText"
                           Text="Выберите проект или создайте новый" 
                           Foreground="{DynamicResource ForegroundSecondary}" 
                           FontSize="16" 
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <!-- Панель проекта -->
                <Grid x:Name="ProjectPanel" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок проекта -->
                    <Border Grid.Row="0" Background="{DynamicResource BackgroundSecondary}" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel>
                                <TextBlock x:Name="ProjectTitle" FontSize="20" FontWeight="Bold" 
                                           Foreground="{DynamicResource ForegroundPrimary}"/>
                                <TextBlock x:Name="ProjectDescription" 
                                           Foreground="{DynamicResource ForegroundTertiary}" 
                                           FontSize="12" Margin="0,4,0,0"/>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Button Content="➕ Добавить модель" 
                                        Background="{DynamicResource AccentPrimary}" 
                                        Foreground="{DynamicResource ForegroundPrimary}" 
                                        Padding="12,6" Margin="5,0" Click="AddModel_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Вкладки моделей -->
                    <TabControl x:Name="ModelsTabControl" Grid.Row="1" Background="Transparent" 
                                BorderThickness="0" Margin="10,10,10,0"
                                SelectionChanged="ModelsTabControl_SelectionChanged">
                        <TabControl.ItemContainerStyle>
                            <Style TargetType="TabItem">
                                <Setter Property="Background" Value="{DynamicResource BackgroundTertiary}"/>
                                <Setter Property="Foreground" Value="{DynamicResource ForegroundSecondary}"/>
                                <Setter Property="Padding" Value="10,8"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border x:Name="Border" 
                                                    Background="{TemplateBinding Background}" 
                                                    Padding="{TemplateBinding Padding}" 
                                                    Margin="0,0,2,0"
                                                    CornerRadius="4,4,0,0">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center" 
                                                               Margin="0,0,5,0"/>
                                                    <Button Content="✏️" FontSize="10" Background="Transparent" 
                                                            Foreground="{DynamicResource ForegroundTertiary}" 
                                                            BorderThickness="0" Margin="2,0"
                                                            ToolTip="Переименовать" Tag="{Binding}"
                                                            Click="RenameModel_Click"/>
                                                    <Button Content="📋" FontSize="10" Background="Transparent" 
                                                            Foreground="{DynamicResource ForegroundTertiary}" 
                                                            BorderThickness="0" Margin="2,0"
                                                            ToolTip="Дублировать" Tag="{Binding}"
                                                            Click="DuplicateModel_Click"/>
                                                    <Button Content="❌" FontSize="10" Background="Transparent" 
                                                            Foreground="{DynamicResource DangerForeground}" 
                                                            BorderThickness="0" Margin="2,0"
                                                            ToolTip="Удалить" Tag="{Binding}"
                                                            Click="RemoveModel_Click"/>
                                                </StackPanel>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" 
                                                            Value="{DynamicResource SelectionBackground}"/>
                                                    <Setter Property="Foreground" 
                                                            Value="{DynamicResource ForegroundPrimary}"/>
                                                </Trigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Border" Property="Background" 
                                                            Value="{DynamicResource HoverBackground}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.ItemContainerStyle>
                    </TabControl>

                    <!-- Панель UDIM -->
                    <Border Grid.Row="2" Background="{DynamicResource BackgroundSecondary}" 
                            Margin="10" CornerRadius="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Кнопки управления рядами -->
                            <Border Grid.Row="0" Background="{DynamicResource BackgroundQuaternary}" 
                                    Margin="0" Padding="10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Верхняя строка -->
                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <Button Content="➕ Добавить ряд" 
                                                Background="{DynamicResource ButtonBackground}" 
                                                Foreground="{DynamicResource ForegroundPrimary}" 
                                                Padding="10,6" Margin="0,0,10,0" Click="AddUdimRow_Click"/>
                                        <Button Content="➖ Удалить верхний ряд" 
                                                Background="{DynamicResource ButtonBackground}" 
                                                Foreground="{DynamicResource ForegroundPrimary}" 
                                                Padding="10,6" Margin="0,0,10,0" Click="RemoveUdimRow_Click"/>
                                        <Separator Width="1" Background="{DynamicResource BorderSecondary}" Margin="10,0"/>
                                        <Button x:Name="CopyTileBtn" Content="📋 Копировать" 
                                                Background="{DynamicResource ButtonBackground}" 
                                                Foreground="{DynamicResource ForegroundPrimary}" 
                                                Padding="10,6" Margin="0,0,5,0" Click="CopyTile_Click"/>
                                        <Button x:Name="PasteTileBtn" Content="📥 Вставить" 
                                                Padding="10,6" Click="PasteTile_Click"
                                                Style="{StaticResource DisableableButtonStyle}"/>
                                    </StackPanel>

                                    <!-- Строка пресетов -->
                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                                        <TextBlock Text="💾 Пресеты:" 
                                                   Foreground="{DynamicResource ForegroundTertiary}" 
                                                   VerticalAlignment="Center" Margin="0,0,10,0"/>
                                        <Button Content="➕ Сохранить как пресет" 
                                                Background="{DynamicResource AccentTertiary}" 
                                                Foreground="{DynamicResource ForegroundPrimary}" 
                                                Padding="10,6" Margin="0,0,10,0" Click="SavePreset_Click"/>
                                        <ComboBox x:Name="PresetComboBox" 
                                                  Width="200" 
                                                  Margin="0,0,10,0"
                                                  DisplayMemberPath="Name"
                                                  SelectionChanged="PresetComboBox_SelectionChanged"/>
                                        <Button x:Name="ApplyPresetBtn" Content="📥 Применить" 
                                                Padding="10,6" Margin="0,0,5,0" Click="ApplyPreset_Click"
                                                Style="{StaticResource DisableableButtonStyle}"/>
                                        <Button x:Name="DeletePresetBtn" Content="🗑️" 
                                                Padding="8,6" ToolTip="Удалить пресет" Click="DeletePreset_Click">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" 
                                                            Value="{DynamicResource ButtonBackgroundDisabled}"/>
                                                    <Setter Property="Foreground" 
                                                            Value="{DynamicResource ForegroundDisabled}"/>
                                                    <Setter Property="IsEnabled" Value="False"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Setter Property="Background" 
                                                                    Value="{DynamicResource DangerButtonBackground}"/>
                                                            <Setter Property="Foreground" 
                                                                    Value="{DynamicResource ForegroundPrimary}"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>

                                    <!-- Нижняя строка - шаблон имени файла -->
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                                        <TextBlock Text="📄 Шаблон имени:" 
                                                   Foreground="{DynamicResource ForegroundTertiary}" 
                                                   FontSize="11" 
                                                   VerticalAlignment="Center"
                                                   Margin="0,0,8,0"/>
                                        <Border Background="{DynamicResource BackgroundPrimary}" 
                                                CornerRadius="4" 
                                                Padding="10,4">
                                            <TextBlock x:Name="FileNameTemplateText" 
                                                       Text="T_[Проект]_[Тип]_1.[UDIM].png" 
                                                       Foreground="{DynamicResource CodeText}" 
                                                       FontSize="11" 
                                                       FontFamily="Consolas"/>
                                        </Border>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Сетка UDIM -->
                            <!-- Сетка UDIM с адаптивным размером -->
                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" 
              HorizontalScrollBarVisibility="Disabled">
                                <ItemsControl x:Name="UdimGrid" Margin="10">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <!-- Ряд UDIM -->
                                            <ItemsControl ItemsSource="{Binding}" Margin="0,0,0,8">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Rows="1" Columns="10"/>
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <!-- Один UDIM тайл -->
                                                        <Border Background="{DynamicResource BackgroundTertiary}" 
        BorderBrush="{DynamicResource BorderPrimary}" 
        BorderThickness="1" 
        Margin="3" 
        CornerRadius="6"
        MouseLeftButtonDown="UdimTile_MouseDown"
        Cursor="Hand"
        Focusable="False">
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding HasAnyTexture}" Value="True">
                                                                            <Setter Property="BorderBrush" 
                            Value="{DynamicResource AccentPrimary}"/>
                                                                            <Setter Property="BorderThickness" Value="2"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>

                                                            <Grid>
                                                                <!-- Фоновое изображение Diffuse (более яркое) -->
                                                                <Image Source="{Binding DiffusePath, Converter={StaticResource PathToImageConverter}}"
               Stretch="UniformToFill"
               Opacity="0.5"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

                                                                <!-- Контент -->
                                                                <Grid Margin="4">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="*"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                    </Grid.RowDefinitions>

                                                                    <!-- Название материала (сверху) -->
                                                                    <Border Grid.Row="0" 
                    Background="{DynamicResource BackgroundPrimary}" 
                    CornerRadius="3" 
                    Padding="6,2"
                    HorizontalAlignment="Center"
                    Cursor="Hand"
                    MouseLeftButtonDown="RenameTile_Click">
                                                                        <TextBlock Text="{Binding DisplayName}" 
                           Foreground="{DynamicResource ForegroundQuaternary}" 
                           FontSize="10"
                           FontWeight="SemiBold"
                           TextTrimming="CharacterEllipsis"
                           MaxWidth="70"
                           HorizontalAlignment="Center"
                           ToolTip="Кликните для переименования"/>
                                                                    </Border>

                                                                    <!-- Пустое пространство для превью текстуры -->
                                                                    <Grid Grid.Row="1"/>

                                                                    <!-- Три зоны текстур (компактные) -->
                                                                    <UniformGrid Grid.Row="2" Columns="3" Margin="0,4,0,4">

                                                                        <!-- Зона Diffuse (красный) -->
                                                                        <Border Tag="Diffuse"
                        CornerRadius="3"
                        Margin="1"
                        Padding="4,2"
                        Cursor="Hand"
                        MouseLeftButtonDown="TextureZone_Click"
                        ToolTip="{Binding DiffusePath}">
                                                                            <Border.Style>
                                                                                <Style TargetType="Border">
                                                                                    <Setter Property="Background" Value="{DynamicResource TextureZoneEmpty}"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding HasDiffuse}" Value="True">
                                                                                            <Setter Property="Background" Value="{DynamicResource TextureDiffuse}"/>
                                                                                        </DataTrigger>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Background" Value="{DynamicResource TextureDiffuseHover}"/>
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Border.Style>
                                                                            <TextBlock Text="D" 
                               Foreground="{DynamicResource ForegroundPrimary}"
                               FontWeight="Bold"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                                                        </Border>

                                                                        <!-- Зона ERM (зелёный) -->
                                                                        <Border Tag="ERM"
                        CornerRadius="3"
                        Margin="1"
                        Padding="4,2"
                        Cursor="Hand"
                        MouseLeftButtonDown="TextureZone_Click"
                        ToolTip="{Binding ErmPath}">
                                                                            <Border.Style>
                                                                                <Style TargetType="Border">
                                                                                    <Setter Property="Background" Value="{DynamicResource TextureZoneEmpty}"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding HasErm}" Value="True">
                                                                                            <Setter Property="Background" Value="{DynamicResource TextureErm}"/>
                                                                                        </DataTrigger>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Background" Value="{DynamicResource TextureErmHover}"/>
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Border.Style>
                                                                            <TextBlock Text="E" 
                               Foreground="{DynamicResource ForegroundPrimary}"
                               FontWeight="Bold"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                                                        </Border>

                                                                        <!-- Зона Normal (синий) -->
                                                                        <Border Tag="Normal"
                        CornerRadius="3"
                        Margin="1"
                        Padding="4,2"
                        Cursor="Hand"
                        MouseLeftButtonDown="TextureZone_Click"
                        ToolTip="{Binding NormalPath}">
                                                                            <Border.Style>
                                                                                <Style TargetType="Border">
                                                                                    <Setter Property="Background" Value="{DynamicResource TextureZoneEmpty}"/>
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding HasNormal}" Value="True">
                                                                                            <Setter Property="Background" Value="{DynamicResource TextureNormal}"/>
                                                                                        </DataTrigger>
                                                                                        <Trigger Property="IsMouseOver" Value="True">
                                                                                            <Setter Property="Background" Value="{DynamicResource TextureNormalHover}"/>
                                                                                        </Trigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </Border.Style>
                                                                            <TextBlock Text="N" 
                               Foreground="{DynamicResource ForegroundPrimary}"
                               FontWeight="Bold"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                                                                        </Border>
                                                                    </UniformGrid>

                                                                    <!-- Номер UDIM (внизу) -->
                                                                    <Border Grid.Row="3" 
                    Background="{DynamicResource BackgroundPrimary}" 
                    CornerRadius="3" 
                    Padding="6,2"
                    HorizontalAlignment="Center">
                                                                        <TextBlock Text="{Binding UdimNumber}" 
                           Foreground="{DynamicResource ForegroundTertiary}" 
                           FontSize="10"
                           FontWeight="Bold"/>
                                                                    </Border>
                                                                </Grid>
                                                            </Grid>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Панель экспорта -->
                    <Border Grid.Row="3" Background="{DynamicResource BackgroundSecondary}" 
                            Padding="15" Margin="10,0,10,10" CornerRadius="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="📁 Папка экспорта:" 
                                           Foreground="{DynamicResource ForegroundSecondary}" 
                                           VerticalAlignment="Center"/>
                                <TextBox x:Name="ExportPathTextBox" Width="400" 
                                         Background="{DynamicResource BackgroundTertiary}" 
                                         Foreground="{DynamicResource ForegroundPrimary}" 
                                         BorderBrush="{DynamicResource BorderPrimary}" 
                                         Padding="8,6" Margin="10,0"/>
                                <Button Content="..." 
                                        Background="{DynamicResource ButtonBackground}" 
                                        Foreground="{DynamicResource ForegroundPrimary}" 
                                        Padding="10,6" Click="BrowseExportPath_Click"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="📤 Экспорт текущей модели" 
                                        Background="{DynamicResource AccentPrimary}" 
                                        Foreground="{DynamicResource ForegroundPrimary}" 
                                        Padding="15,8" Margin="0,0,10,0" FontWeight="SemiBold"
                                        Click="ExportCurrentModel_Click"/>
                                <Button Content="📤 Экспорт всех моделей" 
                                        Background="{DynamicResource AccentSecondary}" 
                                        Foreground="{DynamicResource ForegroundPrimary}" 
                                        Padding="15,8" FontWeight="SemiBold"
                                        Click="ExportAllModels_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>