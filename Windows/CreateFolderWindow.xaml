<Window x:Class="AGR_Project_Manager.Windows.CreateFolderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="📁 Создать папку проекта" 
        Height="650" Width="800"
        MinHeight="600" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundPrimary}"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Название проекта -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Название папки проекта" 
                       Foreground="{DynamicResource ForegroundSecondary}" 
                       FontSize="12" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="ProjectNameTextBox" 
                     Background="{DynamicResource BackgroundTertiary}" 
                     Foreground="{DynamicResource ForegroundPrimary}" 
                     BorderBrush="{DynamicResource BorderPrimary}"
                     Padding="12,10"
                     FontSize="14"
                     CaretBrush="{DynamicResource ForegroundPrimary}"/>
        </StackPanel>

        <!-- Выбор папки -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Рабочая папка (где будет создана структура)" 
                       Foreground="{DynamicResource ForegroundSecondary}" 
                       FontSize="12" 
                       Margin="0,0,0,8"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="FolderPathTextBox" 
                         Background="{DynamicResource BackgroundTertiary}" 
                         Foreground="{DynamicResource ForegroundPrimary}" 
                         BorderBrush="{DynamicResource BorderPrimary}"
                         Padding="12,10"
                         FontSize="14"
                         CaretBrush="{DynamicResource ForegroundPrimary}"
                         IsReadOnly="True"/>
                <Button Grid.Column="1" 
                        Content="📂 Выбрать..." 
                        Background="{DynamicResource ButtonBackground}" 
                        Foreground="{DynamicResource ForegroundPrimary}"
                        Padding="15,10"
                        Margin="10,0,0,0"
                        Cursor="Hand"
                        Click="BrowseFolder_Click"/>
            </Grid>
        </StackPanel>

        <!-- Структура папок -->
        <Border Grid.Row="4" 
                Background="{DynamicResource BackgroundSecondary}" 
                CornerRadius="8" 
                Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <!-- Дерево папок -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📁 Структура папок" 
                               Foreground="{DynamicResource ForegroundPrimary}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <Border Background="{DynamicResource BackgroundPrimary}" 
                            CornerRadius="6" 
                            Padding="15">
                        <StackPanel>
                            <!-- Корневая папка -->
                            <TextBlock x:Name="RootFolderName" 
                                       Text="📁 [Название проекта]" 
                                       Foreground="{DynamicResource CodeText}" 
                                       FontFamily="Consolas" 
                                       FontSize="13"
                                       FontWeight="Bold"/>

                            <!-- Source -->
                            <StackPanel Margin="20,8,0,0">
                                <TextBlock Text="📁 source" 
                                           Foreground="{DynamicResource ForegroundQuaternary}" 
                                           FontFamily="Consolas" FontSize="12"/>
                                <StackPanel Margin="20,4,0,0">
                                    <TextBlock Text="📁 maps" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 mesh" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 dwg" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 pln" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 pdf" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 skp" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Export -->
                            <StackPanel Margin="20,8,0,0">
                                <TextBlock Text="📁 export" 
                                           Foreground="{DynamicResource ForegroundQuaternary}" 
                                           FontFamily="Consolas" FontSize="12"/>
                                <StackPanel Margin="20,4,0,0">
                                    <TextBlock Text="📁 HP" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 LP" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Work -->
                            <StackPanel Margin="20,8,0,0">
                                <TextBlock Text="📁 work" 
                                           Foreground="{DynamicResource ForegroundQuaternary}" 
                                           FontFamily="Consolas" FontSize="12"/>
                                <StackPanel Margin="20,4,0,0">
                                    <TextBlock Text="📁 texture" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 mesh" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <TextBlock Text="📁 bake" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                    <StackPanel Margin="0,4,0,0">
                                        <TextBlock Text="📁 AGR_Check" Foreground="{DynamicResource ForegroundTertiary}" FontFamily="Consolas" FontSize="11"/>
                                        <StackPanel Margin="20,4,0,0">
                                            <TextBlock Text="📁 HP" Foreground="{DynamicResource ForegroundDisabled}" FontFamily="Consolas" FontSize="11"/>
                                            <TextBlock Text="📁 LP" Foreground="{DynamicResource ForegroundDisabled}" FontFamily="Consolas" FontSize="11"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Описания -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="📋 Описание папок" 
                               Foreground="{DynamicResource ForegroundPrimary}" 
                               FontSize="14" 
                               FontWeight="Bold"
                               Margin="0,0,0,15"/>

                    <StackPanel>
                        <!-- Source -->
                        <Border Background="{DynamicResource InfoBoxSourceBackground}" 
                                CornerRadius="6" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="📂 source" 
                                           Foreground="{DynamicResource InfoBoxSourceForeground}" 
                                           FontWeight="Bold" FontSize="13"/>
                                <TextBlock Text="Исходные данные по проекту" 
                                           Foreground="{DynamicResource ForegroundSecondary}" 
                                           FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                <StackPanel Margin="10,8,0,0">
                                    <TextBlock Text="• maps — карты, подложки" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• mesh — 3D модели" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• dwg — чертежи AutoCAD" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• pln — файлы ArchiCAD" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• pdf — документация PDF" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• skp — файлы SketchUp" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Export -->
                        <Border Background="{DynamicResource InfoBoxExportBackground}" 
                                CornerRadius="6" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="📤 export" 
                                           Foreground="{DynamicResource InfoBoxExportForeground}" 
                                           FontWeight="Bold" FontSize="13"/>
                                <TextBlock Text="Финальные файлы для отправки" 
                                           Foreground="{DynamicResource ForegroundSecondary}" 
                                           FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                <StackPanel Margin="10,8,0,0">
                                    <TextBlock Text="• HP — High-Poly модели и архивы" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• LP — Low-Poly модели и архивы" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Work -->
                        <Border Background="{DynamicResource InfoBoxWorkBackground}" 
                                CornerRadius="6" Padding="12" Margin="0,0,0,10">
                            <StackPanel>
                                <TextBlock Text="🔧 work" 
                                           Foreground="{DynamicResource InfoBoxWorkForeground}" 
                                           FontWeight="Bold" FontSize="13"/>
                                <TextBlock Text="Рабочие файлы проекта" 
                                           Foreground="{DynamicResource ForegroundSecondary}" 
                                           FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                <StackPanel Margin="10,8,0,0">
                                    <TextBlock Text="• texture — текстуры (PSD, PNG)" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• mesh — рабочие 3D файлы" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• bake — файлы запечки" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- AGR_Check -->
                        <Border Background="{DynamicResource InfoBoxCheckBackground}" 
                                CornerRadius="6" Padding="12">
                            <StackPanel>
                                <TextBlock Text="✅ AGR_Check" 
                                           Foreground="{DynamicResource InfoBoxCheckForeground}" 
                                           FontWeight="Bold" FontSize="13"/>
                                <TextBlock Text="Архивы для проверки на соответствие Распоряжению" 
                                           Foreground="{DynamicResource ForegroundSecondary}" 
                                           FontSize="12" Margin="0,5,0,0" TextWrapping="Wrap"/>
                                <StackPanel Margin="10,8,0,0">
                                    <TextBlock Text="• HP — архивы High-Poly" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                    <TextBlock Text="• LP — архивы Low-Poly" Foreground="{DynamicResource ForegroundTertiary}" FontSize="11"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <Grid Grid.Row="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Путь создания -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Будет создано:" 
                           Foreground="{DynamicResource ForegroundDisabled}" 
                           FontSize="11" Margin="0,0,8,0"/>
                <TextBlock x:Name="FullPathPreview" 
                           Text="" 
                           Foreground="{DynamicResource AccentPrimary}" 
                           FontSize="11" 
                           FontFamily="Consolas"
                           MaxWidth="350"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <Button Grid.Column="2" 
                    Content="Отмена" 
                    Background="{DynamicResource ButtonBackground}" 
                    Foreground="{DynamicResource ForegroundPrimary}"
                    Padding="25,12"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    Click="Cancel_Click"/>
            <Button Grid.Column="3" 
                    Content="✨ Создать структуру" 
                    Background="{DynamicResource AccentPrimary}" 
                    Foreground="{DynamicResource ForegroundPrimary}"
                    Padding="25,12"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Click="Create_Click"/>
        </Grid>
    </Grid>
</Window>