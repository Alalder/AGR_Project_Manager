<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <system:String x:Key="ThemeName" xmlns:system="clr-namespace:System;assembly=mscorlib">Фиолетовая</system:String>

    <!-- ===== ФОНЫ ===== -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#1a1625"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#221d2e"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#2d2640"/>
    <SolidColorBrush x:Key="BackgroundQuaternary" Color="#352e4a"/>

    <!-- ===== КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#3d3555"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#4d4565"/>
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#252030"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#4d4565"/>

    <!-- ===== АКЦЕНТЫ ===== -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#8b5cf6"/>
    <SolidColorBrush x:Key="AccentSecondary" Color="#a78bfa"/>
    <SolidColorBrush x:Key="AccentTertiary" Color="#7c3aed"/>
    <SolidColorBrush x:Key="SelectionBackground" Color="#3b2d5f"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#352e4a"/>

    <!-- ===== ТЕКСТ ===== -->
    <SolidColorBrush x:Key="ForegroundPrimary" Color="#f5f3ff"/>
    <SolidColorBrush x:Key="ForegroundSecondary" Color="#a5a0b8"/>
    <SolidColorBrush x:Key="ForegroundTertiary" Color="#7c7891"/>
    <SolidColorBrush x:Key="ForegroundQuaternary" Color="#d4d0e0"/>
    <SolidColorBrush x:Key="ForegroundDisabled" Color="#4a4560"/>
    <SolidColorBrush x:Key="CodeText" Color="#c4b5fd"/>

    <!-- ===== ГРАНИЦЫ ===== -->
    <SolidColorBrush x:Key="BorderPrimary" Color="#3d3555"/>
    <SolidColorBrush x:Key="BorderSecondary" Color="#4d4565"/>
    <SolidColorBrush x:Key="BorderHover" Color="#6d6585"/>

    <!-- ===== СПЕЦИАЛЬНЫЕ ===== -->
    <SolidColorBrush x:Key="DangerBackground" Color="#ef4444"/>
    <SolidColorBrush x:Key="DangerForeground" Color="#fca5a5"/>
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#5a2d3a"/>

    <!-- ===== ТЕКСТУРЫ (зоны D/ERM/N) ===== -->
    <!-- Пустая зона -->
    <SolidColorBrush x:Key="TextureZoneEmpty" Color="#3a3a3a"/>

    <!-- Diffuse - красный (приглушённый) -->
    <SolidColorBrush x:Key="TextureDiffuse" Color="#8b4a4a"/>
    <SolidColorBrush x:Key="TextureDiffuseHover" Color="#a55a5a"/>

    <!-- ERM - зелёный (приглушённый) -->
    <SolidColorBrush x:Key="TextureErm" Color="#4a7c59"/>
    <SolidColorBrush x:Key="TextureErmHover" Color="#5a9c69"/>

    <!-- Normal - синий (приглушённый) -->
    <SolidColorBrush x:Key="TextureNormal" Color="#4a5a8b"/>
    <SolidColorBrush x:Key="TextureNormalHover" Color="#5a6aab"/>

    <!-- ===== СПИСКИ ===== -->
    <SolidColorBrush x:Key="ListItemBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ListItemBackgroundSelected" Color="#3b2d5f"/>
    <SolidColorBrush x:Key="ListItemBackgroundHover" Color="#352e4a"/>

    <!-- ===== COMBOBOX ===== -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="#2d2640"/>
    <SolidColorBrush x:Key="ComboBoxItemSelected" Color="#8b5cf6"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlighted" Color="#3d3555"/>
    <SolidColorBrush x:Key="ComboBoxArrow" Color="#a5a0b8"/>

    <!-- ===== ИНФОРМАЦИОННЫЕ БЛОКИ ===== -->
    <SolidColorBrush x:Key="InfoBoxSourceBackground" Color="#2a3a2a"/>
    <SolidColorBrush x:Key="InfoBoxSourceForeground" Color="#6a9955"/>

    <SolidColorBrush x:Key="InfoBoxExportBackground" Color="#3a3a2a"/>
    <SolidColorBrush x:Key="InfoBoxExportForeground" Color="#c9a959"/>

    <SolidColorBrush x:Key="InfoBoxWorkBackground" Color="#2a2a3a"/>
    <SolidColorBrush x:Key="InfoBoxWorkForeground" Color="#5a7ac9"/>

    <SolidColorBrush x:Key="InfoBoxCheckBackground" Color="#3a2a2a"/>
    <SolidColorBrush x:Key="InfoBoxCheckForeground" Color="#c95a5a"/>

    <!-- ===== ДОПОЛНИТЕЛЬНЫЕ КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonDanger" Color="#7c4a4a"/>
    <SolidColorBrush x:Key="ButtonInfo" Color="#3a3a5a"/>

    <!-- ===== ЦВЕТОВЫЕ КАНАЛЫ RGB ===== -->
    <SolidColorBrush x:Key="ColorChannelRed" Color="#ff6b6b"/>
    <SolidColorBrush x:Key="ColorChannelGreen" Color="#6bff6b"/>
    <SolidColorBrush x:Key="ColorChannelBlue" Color="#6b6bff"/>

    <!-- ===== СЕКЦИИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpSectionProjects" Color="#4a7c59"/>
    <SolidColorBrush x:Key="HelpSectionModels" Color="#5a7ac9"/>
    <SolidColorBrush x:Key="HelpSectionUdim" Color="#c9a959"/>
    <SolidColorBrush x:Key="HelpSectionPresets" Color="#59a9c9"/>
    <SolidColorBrush x:Key="HelpSectionExport" Color="#c95a8a"/>
    <SolidColorBrush x:Key="HelpSectionUtilities" Color="#9a6ac9"/>
    <SolidColorBrush x:Key="HelpSectionHotkeys" Color="#6ac9a9"/>
    <SolidColorBrush x:Key="HelpSectionStorage" Color="#c9c959"/>

    <!-- ===== БЛОКИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpBoxPurple" Color="#2a2a3a"/>
    <SolidColorBrush x:Key="HelpBoxGreen" Color="#2a3a2a"/>
    <SolidColorBrush x:Key="HelpBoxRed" Color="#3a2a2a"/>
    <SolidColorBrush x:Key="HelpBoxBlue" Color="#2a3a3a"/>

    <!-- ===== СТАТУСНЫЕ ЦВЕТА ===== -->
    <SolidColorBrush x:Key="SuccessText" Color="#90EE90"/>

</ResourceDictionary>