<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== МЕТАДАННЫЕ ===== -->
    <system:String x:Key="ThemeName" xmlns:system="clr-namespace:System;assembly=mscorlib">Тёмная</system:String>

    <!-- ===== ФОНЫ ===== -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#1e1d22"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#252429"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#2d2c35"/>
    <SolidColorBrush x:Key="BackgroundQuaternary" Color="#2a2a35"/>

    <!-- ===== КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#3a3a3a"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#4a4a4a"/>
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#252525"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#4a4a4a"/>

    <!-- ===== АКЦЕНТЫ ===== -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#4a7c59"/>
    <SolidColorBrush x:Key="AccentSecondary" Color="#5a8c69"/>
    <SolidColorBrush x:Key="AccentTertiary" Color="#3a5a3a"/>
    <SolidColorBrush x:Key="SelectionBackground" Color="#3a3a5a"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#353545"/>

    <!-- ===== ТЕКСТ ===== -->
    <SolidColorBrush x:Key="ForegroundPrimary" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="ForegroundSecondary" Color="#aaaaaa"/>
    <SolidColorBrush x:Key="ForegroundTertiary" Color="#888888"/>
    <SolidColorBrush x:Key="ForegroundQuaternary" Color="#cccccc"/>
    <SolidColorBrush x:Key="ForegroundDisabled" Color="#555555"/>
    <SolidColorBrush x:Key="CodeText" Color="#6a9955"/>

    <!-- ===== ГРАНИЦЫ ===== -->
    <SolidColorBrush x:Key="BorderPrimary" Color="#3a3a3a"/>
    <SolidColorBrush x:Key="BorderSecondary" Color="#4a4a4a"/>
    <SolidColorBrush x:Key="BorderHover" Color="#5a5a5a"/>

    <!-- ===== СПЕЦИАЛЬНЫЕ ===== -->
    <SolidColorBrush x:Key="DangerBackground" Color="#ff4d4d"/>
    <SolidColorBrush x:Key="DangerForeground" Color="#ff6b6b"/>
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#5a3a3a"/>

    <!-- ===== ТЕКСТУРЫ (зоны D/ERM/N) ===== -->
    <!-- Пустая зона -->
    <SolidColorBrush x:Key="TextureZoneEmpty" Color="#3a3a3a"/>

    <!-- Diffuse - красный (приглушённый) -->
    <SolidColorBrush x:Key="TextureDiffuse" Color="#8b4a4a"/>
    <SolidColorBrush x:Key="TextureDiffuseHover" Color="#a55a5a"/>

    <!-- ERM - зелёный (приглушённый) -->
    <SolidColorBrush x:Key="TextureErm" Color="#4a7c59"/>
    <SolidColorBrush x:Key="TextureErmHover" Color="#5a9c69"/>

    <!-- Normal - синий (приглушённый) -->
    <SolidColorBrush x:Key="TextureNormal" Color="#4a5a8b"/>
    <SolidColorBrush x:Key="TextureNormalHover" Color="#5a6aab"/>

    <!-- ===== СПИСКИ ===== -->
    <SolidColorBrush x:Key="ListItemBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ListItemBackgroundSelected" Color="#3a3a5a"/>
    <SolidColorBrush x:Key="ListItemBackgroundHover" Color="#353545"/>

    <!-- ===== COMBOBOX ===== -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="#2d2c35"/>
    <SolidColorBrush x:Key="ComboBoxItemSelected" Color="#4a7c59"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlighted" Color="#3d3c45"/>
    <SolidColorBrush x:Key="ComboBoxArrow" Color="#888888"/>

    <!-- ===== ИНФОРМАЦИОННЫЕ БЛОКИ ===== -->
    <SolidColorBrush x:Key="InfoBoxSourceBackground" Color="#2a3a2a"/>
    <SolidColorBrush x:Key="InfoBoxSourceForeground" Color="#6a9955"/>

    <SolidColorBrush x:Key="InfoBoxExportBackground" Color="#3a3a2a"/>
    <SolidColorBrush x:Key="InfoBoxExportForeground" Color="#c9a959"/>

    <SolidColorBrush x:Key="InfoBoxWorkBackground" Color="#2a2a3a"/>
    <SolidColorBrush x:Key="InfoBoxWorkForeground" Color="#5a7ac9"/>

    <SolidColorBrush x:Key="InfoBoxCheckBackground" Color="#3a2a2a"/>
    <SolidColorBrush x:Key="InfoBoxCheckForeground" Color="#c95a5a"/>

    <!-- ===== ДОПОЛНИТЕЛЬНЫЕ КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonDanger" Color="#7c4a4a"/>
    <SolidColorBrush x:Key="ButtonInfo" Color="#3a3a5a"/>

    <!-- ===== ЦВЕТОВЫЕ КАНАЛЫ RGB ===== -->
    <SolidColorBrush x:Key="ColorChannelRed" Color="#ff6b6b"/>
    <SolidColorBrush x:Key="ColorChannelGreen" Color="#6bff6b"/>
    <SolidColorBrush x:Key="ColorChannelBlue" Color="#6b6bff"/>

    <!-- ===== СЕКЦИИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpSectionProjects" Color="#4a7c59"/>
    <SolidColorBrush x:Key="HelpSectionModels" Color="#5a7ac9"/>
    <SolidColorBrush x:Key="HelpSectionUdim" Color="#c9a959"/>
    <SolidColorBrush x:Key="HelpSectionPresets" Color="#59a9c9"/>
    <SolidColorBrush x:Key="HelpSectionExport" Color="#c95a8a"/>
    <SolidColorBrush x:Key="HelpSectionUtilities" Color="#9a6ac9"/>
    <SolidColorBrush x:Key="HelpSectionHotkeys" Color="#6ac9a9"/>
    <SolidColorBrush x:Key="HelpSectionStorage" Color="#c9c959"/>

    <!-- ===== БЛОКИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpBoxPurple" Color="#2a2a3a"/>
    <SolidColorBrush x:Key="HelpBoxGreen" Color="#2a3a2a"/>
    <SolidColorBrush x:Key="HelpBoxRed" Color="#3a2a2a"/>
    <SolidColorBrush x:Key="HelpBoxBlue" Color="#2a3a3a"/>

    <!-- ===== СТАТУСНЫЕ ЦВЕТА ===== -->
    <SolidColorBrush x:Key="SuccessText" Color="#90EE90"/>

</ResourceDictionary>