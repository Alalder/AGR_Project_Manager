<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <system:String x:Key="ThemeName" xmlns:system="clr-namespace:System;assembly=mscorlib">Светлая</system:String>

    <!-- ===== ФОНЫ ===== -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#f5f5f5"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#e8e8e8"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#ffffff"/>
    <SolidColorBrush x:Key="BackgroundQuaternary" Color="#f0f0f0"/>

    <!-- ===== КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#e0e0e0"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#d0d0d0"/>
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#f0f0f0"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#c0c0c0"/>

    <!-- ===== АКЦЕНТЫ ===== -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#4a7c59"/>
    <SolidColorBrush x:Key="AccentSecondary" Color="#5a8c69"/>
    <SolidColorBrush x:Key="AccentTertiary" Color="#3a6a49"/>
    <SolidColorBrush x:Key="SelectionBackground" Color="#cce0ff"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#e5e5f0"/>

    <!-- ===== ТЕКСТ ===== -->
    <SolidColorBrush x:Key="ForegroundPrimary" Color="#1a1a1a"/>
    <SolidColorBrush x:Key="ForegroundSecondary" Color="#555555"/>
    <SolidColorBrush x:Key="ForegroundTertiary" Color="#777777"/>
    <SolidColorBrush x:Key="ForegroundQuaternary" Color="#333333"/>
    <SolidColorBrush x:Key="ForegroundDisabled" Color="#aaaaaa"/>
    <SolidColorBrush x:Key="CodeText" Color="#2e7d32"/>

    <!-- ===== ГРАНИЦЫ ===== -->
    <SolidColorBrush x:Key="BorderPrimary" Color="#d0d0d0"/>
    <SolidColorBrush x:Key="BorderSecondary" Color="#c0c0c0"/>
    <SolidColorBrush x:Key="BorderHover" Color="#a0a0a0"/>

    <!-- ===== СПЕЦИАЛЬНЫЕ ===== -->
    <SolidColorBrush x:Key="DangerBackground" Color="#e53935"/>
    <SolidColorBrush x:Key="DangerForeground" Color="#c62828"/>
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#ffcdd2"/>

    <!-- ===== ТЕКСТУРЫ (зоны D/ERM/N) ===== -->
    <!-- Пустая зона -->
    <SolidColorBrush x:Key="TextureZoneEmpty" Color="#d0d0d0"/>

    <!-- Diffuse - красный (приглушённый) -->
    <SolidColorBrush x:Key="TextureDiffuse" Color="#e57373"/>
    <SolidColorBrush x:Key="TextureDiffuseHover" Color="#ef9a9a"/>

    <!-- ERM - зелёный (приглушённый) -->
    <SolidColorBrush x:Key="TextureErm" Color="#81c784"/>
    <SolidColorBrush x:Key="TextureErmHover" Color="#a5d6a7"/>

    <!-- Normal - синий (приглушённый) -->
    <SolidColorBrush x:Key="TextureNormal" Color="#7986cb"/>
    <SolidColorBrush x:Key="TextureNormalHover" Color="#9fa8da"/>

    <!-- ===== СПИСКИ ===== -->
    <SolidColorBrush x:Key="ListItemBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ListItemBackgroundSelected" Color="#cce0ff"/>
    <SolidColorBrush x:Key="ListItemBackgroundHover" Color="#e8e8f0"/>

    <!-- ===== COMBOBOX ===== -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="#ffffff"/>
    <SolidColorBrush x:Key="ComboBoxItemSelected" Color="#4a7c59"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlighted" Color="#e8e8e8"/>
    <SolidColorBrush x:Key="ComboBoxArrow" Color="#666666"/>

    <!-- ===== ИНФОРМАЦИОННЫЕ БЛОКИ ===== -->
    <SolidColorBrush x:Key="InfoBoxSourceBackground" Color="#e8f5e9"/>
    <SolidColorBrush x:Key="InfoBoxSourceForeground" Color="#2e7d32"/>

    <SolidColorBrush x:Key="InfoBoxExportBackground" Color="#fff8e1"/>
    <SolidColorBrush x:Key="InfoBoxExportForeground" Color="#f9a825"/>

    <SolidColorBrush x:Key="InfoBoxWorkBackground" Color="#e3f2fd"/>
    <SolidColorBrush x:Key="InfoBoxWorkForeground" Color="#1565c0"/>

    <SolidColorBrush x:Key="InfoBoxCheckBackground" Color="#ffebee"/>
    <SolidColorBrush x:Key="InfoBoxCheckForeground" Color="#c62828"/>

    <!-- ===== ДОПОЛНИТЕЛЬНЫЕ КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonDanger" Color="#7c4a4a"/>
    <SolidColorBrush x:Key="ButtonInfo" Color="#3a3a5a"/>

    <!-- ===== ЦВЕТОВЫЕ КАНАЛЫ RGB ===== -->
    <SolidColorBrush x:Key="ColorChannelRed" Color="#ff6b6b"/>
    <SolidColorBrush x:Key="ColorChannelGreen" Color="#6bff6b"/>
    <SolidColorBrush x:Key="ColorChannelBlue" Color="#6b6bff"/>

    <!-- ===== СЕКЦИИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpSectionProjects" Color="#2e7d32"/>
    <SolidColorBrush x:Key="HelpSectionModels" Color="#1565c0"/>
    <SolidColorBrush x:Key="HelpSectionUdim" Color="#f9a825"/>
    <SolidColorBrush x:Key="HelpSectionPresets" Color="#0097a7"/>
    <SolidColorBrush x:Key="HelpSectionExport" Color="#c2185b"/>
    <SolidColorBrush x:Key="HelpSectionUtilities" Color="#7b1fa2"/>
    <SolidColorBrush x:Key="HelpSectionHotkeys" Color="#00897b"/>
    <SolidColorBrush x:Key="HelpSectionStorage" Color="#fbc02d"/>

    <!-- ===== БЛОКИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpBoxPurple" Color="#ede7f6"/>
    <SolidColorBrush x:Key="HelpBoxGreen" Color="#e8f5e9"/>
    <SolidColorBrush x:Key="HelpBoxRed" Color="#ffebee"/>
    <SolidColorBrush x:Key="HelpBoxBlue" Color="#e3f2fd"/>

    <!-- ===== СТАТУСНЫЕ ЦВЕТА ===== -->
    <SolidColorBrush x:Key="SuccessText" Color="#2e7d32"/>

    
</ResourceDictionary>