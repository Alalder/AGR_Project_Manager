<Window x:Class="AGR_Project_Manager.Windows.RenameDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Переименовать" 
        SizeToContent="Height"
        Width="380"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundPrimary}"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">

    <Grid Margin="20,20,20,25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Поле ввода -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Название" 
                       Foreground="{DynamicResource ForegroundSecondary}" 
                       FontSize="12" 
                       Margin="0,0,0,8"/>
            <TextBox x:Name="NameTextBox" 
                     Background="{DynamicResource BackgroundTertiary}" 
                     Foreground="{DynamicResource ForegroundPrimary}" 
                     BorderBrush="{DynamicResource BorderPrimary}"
                     Padding="10,10"
                     FontSize="14"
                     CaretBrush="{DynamicResource ForegroundPrimary}"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Отмена" 
                    Background="{DynamicResource ButtonBackground}" 
                    Foreground="{DynamicResource ForegroundPrimary}"
                    Padding="25,10"
                    Margin="0,0,10,0"
                    Cursor="Hand"
                    IsCancel="True"
                    Click="CancelBtn_Click"/>
            <Button Content="Сохранить" 
                    Background="{DynamicResource AccentPrimary}" 
                    Foreground="{DynamicResource ForegroundPrimary}"
                    Padding="25,10"
                    Cursor="Hand"
                    IsDefault="True"
                    Click="SaveBtn_Click"/>
        </StackPanel>
    </Grid>
</Window>