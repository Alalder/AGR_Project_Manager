<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <system:String x:Key="ThemeName" xmlns:system="clr-namespace:System;assembly=mscorlib">Светло-голубая</system:String>

    <!-- ===== ФОНЫ ===== -->
    <SolidColorBrush x:Key="BackgroundPrimary" Color="#f0f9ff"/>
    <SolidColorBrush x:Key="BackgroundSecondary" Color="#e0f2fe"/>
    <SolidColorBrush x:Key="BackgroundTertiary" Color="#ffffff"/>
    <SolidColorBrush x:Key="BackgroundQuaternary" Color="#e8f4fc"/>

    <!-- ===== КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonBackground" Color="#bae6fd"/>
    <SolidColorBrush x:Key="ButtonBackgroundHover" Color="#7dd3fc"/>
    <SolidColorBrush x:Key="ButtonBackgroundDisabled" Color="#e0f2fe"/>
    <SolidColorBrush x:Key="ButtonBorder" Color="#7dd3fc"/>

    <!-- ===== АКЦЕНТЫ ===== -->
    <SolidColorBrush x:Key="AccentPrimary" Color="#0284c7"/>
    <SolidColorBrush x:Key="AccentSecondary" Color="#0ea5e9"/>
    <SolidColorBrush x:Key="AccentTertiary" Color="#0369a1"/>
    <SolidColorBrush x:Key="SelectionBackground" Color="#bae6fd"/>
    <SolidColorBrush x:Key="HoverBackground" Color="#e0f2fe"/>

    <!-- ===== ТЕКСТ ===== -->
    <SolidColorBrush x:Key="ForegroundPrimary" Color="#0c4a6e"/>
    <SolidColorBrush x:Key="ForegroundSecondary" Color="#0369a1"/>
    <SolidColorBrush x:Key="ForegroundTertiary" Color="#0284c7"/>
    <SolidColorBrush x:Key="ForegroundQuaternary" Color="#075985"/>
    <SolidColorBrush x:Key="ForegroundDisabled" Color="#7dd3fc"/>
    <SolidColorBrush x:Key="CodeText" Color="#0369a1"/>

    <!-- ===== ГРАНИЦЫ ===== -->
    <SolidColorBrush x:Key="BorderPrimary" Color="#7dd3fc"/>
    <SolidColorBrush x:Key="BorderSecondary" Color="#38bdf8"/>
    <SolidColorBrush x:Key="BorderHover" Color="#0ea5e9"/>

    <!-- ===== СПЕЦИАЛЬНЫЕ ===== -->
    <SolidColorBrush x:Key="DangerBackground" Color="#dc2626"/>
    <SolidColorBrush x:Key="DangerForeground" Color="#b91c1c"/>
    <SolidColorBrush x:Key="DangerButtonBackground" Color="#fecaca"/>

    <!-- ===== ТЕКСТУРЫ ===== -->
    <SolidColorBrush x:Key="TextureDiffuse" Color="#16a34a"/>
    <SolidColorBrush x:Key="TextureErm" Color="#ea580c"/>
    <SolidColorBrush x:Key="TextureNormal" Color="#7c3aed"/>

    <!-- ===== СПИСКИ ===== -->
    <SolidColorBrush x:Key="ListItemBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="ListItemBackgroundSelected" Color="#bae6fd"/>
    <SolidColorBrush x:Key="ListItemBackgroundHover" Color="#e0f2fe"/>

    <!-- ===== COMBOBOX ===== -->
    <SolidColorBrush x:Key="ComboBoxBackground" Color="#ffffff"/>
    <SolidColorBrush x:Key="ComboBoxItemSelected" Color="#0284c7"/>
    <SolidColorBrush x:Key="ComboBoxItemHighlighted" Color="#e0f2fe"/>
    <SolidColorBrush x:Key="ComboBoxArrow" Color="#0369a1"/>

    <!-- ===== ИНФОРМАЦИОННЫЕ БЛОКИ ===== -->
    <SolidColorBrush x:Key="InfoBoxSourceBackground" Color="#e8f5e9"/>
    <SolidColorBrush x:Key="InfoBoxSourceForeground" Color="#2e7d32"/>

    <SolidColorBrush x:Key="InfoBoxExportBackground" Color="#fff8e1"/>
    <SolidColorBrush x:Key="InfoBoxExportForeground" Color="#f9a825"/>

    <SolidColorBrush x:Key="InfoBoxWorkBackground" Color="#e3f2fd"/>
    <SolidColorBrush x:Key="InfoBoxWorkForeground" Color="#1565c0"/>

    <SolidColorBrush x:Key="InfoBoxCheckBackground" Color="#ffebee"/>
    <SolidColorBrush x:Key="InfoBoxCheckForeground" Color="#c62828"/>

    <!-- ===== ДОПОЛНИТЕЛЬНЫЕ КНОПКИ ===== -->
    <SolidColorBrush x:Key="ButtonDanger" Color="#7c4a4a"/>
    <SolidColorBrush x:Key="ButtonInfo" Color="#3a3a5a"/>

    <!-- ===== ЦВЕТОВЫЕ КАНАЛЫ RGB ===== -->
    <SolidColorBrush x:Key="ColorChannelRed" Color="#ff6b6b"/>
    <SolidColorBrush x:Key="ColorChannelGreen" Color="#6bff6b"/>
    <SolidColorBrush x:Key="ColorChannelBlue" Color="#6b6bff"/>

    <!-- ===== СЕКЦИИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpSectionProjects" Color="#2e7d32"/>
    <SolidColorBrush x:Key="HelpSectionModels" Color="#1565c0"/>
    <SolidColorBrush x:Key="HelpSectionUdim" Color="#f9a825"/>
    <SolidColorBrush x:Key="HelpSectionPresets" Color="#0097a7"/>
    <SolidColorBrush x:Key="HelpSectionExport" Color="#c2185b"/>
    <SolidColorBrush x:Key="HelpSectionUtilities" Color="#7b1fa2"/>
    <SolidColorBrush x:Key="HelpSectionHotkeys" Color="#00897b"/>
    <SolidColorBrush x:Key="HelpSectionStorage" Color="#fbc02d"/>

    <!-- ===== БЛОКИ СПРАВКИ ===== -->
    <SolidColorBrush x:Key="HelpBoxPurple" Color="#ede7f6"/>
    <SolidColorBrush x:Key="HelpBoxGreen" Color="#e8f5e9"/>
    <SolidColorBrush x:Key="HelpBoxRed" Color="#ffebee"/>

    <!-- ===== СТАТУСНЫЕ ЦВЕТА ===== -->
    <SolidColorBrush x:Key="SuccessText" Color="#2e7d32"/>

</ResourceDictionary>